{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug myApp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myApp",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "GTK_A11Y",
                    "value": "none"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build myApp",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
