{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build myApp",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Clean myApp",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Run myApp",
            "type": "shell",
            "command": "make run",
            "group": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
